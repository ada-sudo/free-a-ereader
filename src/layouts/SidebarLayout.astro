---
const { title } = Astro.props;
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="layout">
    <h1 class="page-title">{title}</h1>

    <main class="main-content">
      <slot />
    </main>

    <!-- Centered image overlapping the top of the footer -->
    <img src="/main-logo.png" alt="Logo" class="bar-logo" />

    <footer class="bottom-bar">
      <div class="left-link"><a href="/">Home</a></div>
      <div class="right-link"><a href="/library">Library</a></div>
    </footer>
  </body>
</html>
